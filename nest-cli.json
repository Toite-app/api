{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {
        "include": "i18n/messages/**/*",
        "watchAssets": true,
        "outDir": "dist/src"
      }
    ],
    "deleteOutDir": true
  }
}
